    <div class="container">
        <div class="row">

            <div class="col-md-4 mr-auto text-center mt40 mb40">
                <div class="section-heading">
                    <h5>Reset Your Email</h5>
                    <hr class="separator">
                </div>
                <div>
                    <p>
                        Your password has been reset. Please @Html.ActionLink("click here to log in", "Login", "Account", routeValues: null, htmlAttributes: new { @Class = "btn btn-md btn-ghost-color", id = "loginLink" })
