@model IQRecruitmentTool.Models.AssesSection

@{
    ViewBag.Title = "Create";
}

<h2>Create</h2>

@using (Html.BeginForm("Create","AssesSections", FormMethod.Post, new { id="CreateSection"}))
{
    @Html.AntiForgeryToken()
    
  

<section class="checkout">
    <div class="container">
        <div class="row">

            <div class="col-md-8 mr-auto text-left mt40 mb40">
                <div class="section-heading">
                    <h5>Assesment Creation - Section </h5>
                    <hr class="">
                </div>


                @Html.ValidationSummary(true, "", new { @class = "text-danger" })
                <div class="col-lg-6 ">
                    <label>Section Name</label>
                </div>
                <div class="col-lg-6 ">
                    @Html.EditorFor(model => model.SectionName, new { htmlAttributes = new { @class = "form-control" } })
                    @Html.ValidationMessageFor(model => model.SectionName, "", new { @class = "text-danger" })
                </div>
               
            <div class="col-md-6 mr-auto text-center mt40 mb40">
                <button id="Create" type="submit" value="Create" class=" btn btn-lg btn-primary btn-square btn-appear">Submit</button>
                <div />
            </div>
              
                @foreach (var Section in ViewBag.Sections)
                {

                    <ul>@Section.SectionName</ul>
                }


        </div>
    </div>
        </div>

</section>
}
<div id="results"> </div>
@section Scripts{
<script>
    $(document).ready(function () {
   
        $("#Create").click(function () {
            $.ajax({
                type: 'POST',
                url: '@Url.Action("SaveSection")',
                data: { id: $("#SectionName").val() },
                success: function (data) {
                
                    alert(data.success); 
                         },
                    })
                }
            })
        })


    });
</script>
}



