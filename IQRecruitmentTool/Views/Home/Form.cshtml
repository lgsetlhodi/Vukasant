@model IQRecruitmentTool.Models.EmailFormModel
<br />
<br />

@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()
    <section class="checkout">
        <div class="container">
            <div class="row">
                <div class="col-md-7 mr-auto text-left mt40 mb40">
                    <div class="section-heading">
                        <h5>Send us your questions and comment</h5>
                        <hr class="">
                    </div>
                    <div class="form-group">
                        @Html.LabelFor(m => m.FromName, new { @class = "col-md-2 control-label" })
                        <div class="col-md-10">
                            @Html.TextBoxFor(m => m.FromName, new { @class = "contact input" })
                            @Html.ValidationMessageFor(m => m.FromName)
                        </div>
                    </div>
                    <div class="form-group">
                        @Html.LabelFor(m => m.FromEmail, new { @class = "col-md-2 control-label" })
                        <div class="col-md-10">
                            @Html.TextBoxFor(m => m.FromEmail, new { @class = "contact input" })
                            @Html.ValidationMessageFor(m => m.FromEmail)
                        </div>
                    </div>
                    <div class="form-group">
                        @Html.LabelFor(m => m.Message, new { @class = "col-md-2 control-label" })
                        <div class="col-md-10">
                            @Html.TextAreaFor(m => m.Message, new { @class = "contact input" })
                            @Html.ValidationMessageFor(m => m.Message)
                        </div>
                    </div>

                </div>
            </div>
        </div>
       
            <div class="col-md-6 mr-auto text-center mt40 mb40">
                @ViewBag.Message
                <button type="submit" value="Send" class="btn btn-lg btn-primary btn-square">Send</button>
            </div>
      
</section>
}
@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
