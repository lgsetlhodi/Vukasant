    <div class="hero-container container">
        <div class="hero-content text-center">
            <div class="col-sm-12 mr-auto text-center mb60">
                <h2 class="white">@Jobs.First().JobType  <strong><i class="icon-magnifying-glass"></i></strong></h2>
                <hr class="separator">

            </div>




            <div class="home-blog-filters">
